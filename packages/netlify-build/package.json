{
  "name": "@hammerframework/build",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "@netlify/zip-it-and-ship-it": "https://github.com/netlify/zip-it-and-ship-it.git#feature/async",
    "netlify-cli": "^2.20.1",
    "fs-extra": "8.1.0"
  },
  "scripts": {
    "build": "yarn clean && yarn build:api && yarn build:web",
    "build:api": "yarn workspace api build",
    "build:web": "yarn workspace web build",
    "bundle": "node ./scripts/bundle-lambda-functions.js",
    "deploy": "yarn build && yarn bundle && yarn netlify deploy",
    "clean": "rm -rf dist"
  }
}
